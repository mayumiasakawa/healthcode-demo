

<!-- Page Wrapper -->
<div id="wrapper">

<!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <% if user_signed_in? %>
            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%= render "shared/header" %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">登録 基本情報</h1>
                    </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="card border-left-success shadow h-100 py-2 md-12 mb-4">
                            <div class="card-body">
                                <span class="h5 font-weight-bold text-uppercase mb-1 mr-2">
                                        年齢
                                </span>
                                <% if @birthday.where(user_id: current_user.id).present? %>
                                    <div class="mt-3">
                                        年齢
                                    </div>
                                <% else %>
                                    <p class="h6 font-weight-bold text-uppercase mb-1 mr-2">
                                    誕生日を登録してね！
                                    </p>
                                <% end %> 
                            </div>
                        </div>

                        <!-- Earnings (Monthly) Card Example -->
                        <div class="card border-left-info shadow h-100 py-2 md-12 mb-4">
                            <div class="card-body">
                                <span class="h5 font-weight-bold text-uppercase mb-1 mr-2">
                                    アレルギー
                                </span>
                                <% if @allergy.where(user_id: current_user.id).present? %>
                                    <div class="font-weight-bold text-uppercase mt-2 mb-2">
                                            アレルギーの有無
                                    </div>
                                <% else %>
                                    <p class="h6 font-weight-bold text-uppercase mb-1 mr-2">
                                        アレルギー登録してね！
                                    </p>
                                <% end %>
                            </div>
                        </div>            
                            
                    <!-- Earnings (Monthly) Card Example -->
                    <div class="card border-left-warning shadow h-100 py-2 md-12 mb-4">
                        <div class="card-body">
                            <span class="h5 font-weight-bold text-uppercase mb-2">
                                アルコール
                            </span>
                            <% if @overviews.alcohol.where(user_id: current_user.id).present? %>
                              <div class="font-weight-bold text-uppercase mt-2 mb-2">
                                アルコールの有無
                              </div>
                            <% else %>
                              <p class="h6 font-weight-bold text-uppercase mb-1 mr-2">
                                アルコールの登録してね！
                              </p>
                            <% end %>
                        </div>
                    </div>
    
                    <!-- Earnings (Monthly) Card Example -->
                    <div class="card border-left-danger shadow h-100 py-2 md-12 mb-4">
                      <div class="card-body">
                        <span class="h5 font-weight-bold text-uppercase mb-2">
                            タバコ
                        </span>
                        <% if @overviews.cigarette.where(user_id: current_user.id).present? %>
                          <div class="font-weight-bold text-uppercase mt-2 mb-2">
                            タバコの有無
                          </div>
                        <% else %>
                          <p class="h6 font-weight-bold text-uppercase mb-1 mr-2">
                            タバコの登録してね！
                          </p>
                        <% end %>
                      </div>    
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->                        
            <% end %> 

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>
